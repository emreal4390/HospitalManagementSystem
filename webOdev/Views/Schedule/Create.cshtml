@model webOdev.Models.Schedule

<h2>Create New Schedule</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AssignedTo" class="control-label">Select Assistant or Doctor</label>
        <select asp-for="AssignedTo" class="form-control">
            <option value="">Select</option>
            @foreach (var assistant in ViewData["Assistants"] as List<webOdev.Models.Assistant>)
            {
                <option value="@assistant.Name">@assistant.Name (Assistant)</option>
            }
            @foreach (var doctor in ViewData["Doctors"] as List<webOdev.Models.Doctor>)
            {
                <option value="@doctor.Name">@doctor.Name (Doctor)</option>
            }
        </select>
        <span asp-validation-for="AssignedTo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department" class="control-label">Select Department</label>
        <select asp-for="Department" class="form-control">
            <option value="">Select</option>
            @foreach (var department in ViewData["Departments"] as List<webOdev.Models.Department>)
            {
                <option value="@department.Name">@department.Name</option>
            }
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
