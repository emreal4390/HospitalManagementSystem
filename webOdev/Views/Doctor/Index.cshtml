@model IEnumerable<webOdev.Models.Doctor>

<h2>Doctors List</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Create New Doctor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Specialization</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Surname</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = doctor.Id })" class="btn btn-primary btn-sm">Edit</a> 
                    <a href="@Url.Action("Delete", new { id = doctor.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
