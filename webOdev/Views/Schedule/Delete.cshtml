@model webOdev.Models.Schedule

<h2>Delete Schedule</h2>

<h4>Are you sure you want to delete this schedule?</h4>

<div>
    <h5>@Model.Title</h5>
    <dl class="row">
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>

        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>

        <dt class="col-sm-2">Assigned To</dt>
        <dd class="col-sm-10">@Model.AssignedTo</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>
    </dl>
</div>

<form asp-action="Delete" asp-controller="Schedule" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Schedule" class="btn btn-secondary">Cancel</a>
</form>